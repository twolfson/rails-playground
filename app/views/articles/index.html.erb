<h1>Listing articles</h1>

<table>
  <tr>
    <th>Id</th>
    <th>Title</th>
    <th>Text</th>
  </tr>

  <% @articles.each do |article| %>
    <tr>
      <td><%= article.id %></td>
      <td><%= article.title %></td>
      <td><%= article.text %></td>
      <td><%= link_to('Show', article_path(article)) %></td>
    </tr>
  <% end %>
</table>
